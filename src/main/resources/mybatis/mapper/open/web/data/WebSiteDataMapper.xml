<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cc.dawn.local.craw.web.data.dao.WebSiteDataMapper">

    <sql id="effect_sql">
        WHERE effect = #{effect } AND status = #{status}
    </sql>

    <!--  -->
    <select id="selectBYParentid" resultType="cn.cc.dawn.local.craw.web.data.dto.WebSiteDataDto">
        select * from cc_websitedata
        <!--<include refid="effect_sql" />
        and-->
        WHERE
        parentid = #{parentid};
    </select>

    <!-- 列表查询 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id"  keyColumn="id">
        INSERT INTO `oneforall`.`cc_websitedata` (
            `parentid`,
            `type`,
            `html`,
            `effect`,
            `status`
        )
        VALUES
            (
                #{parentid},
                #{type},
                #{html},
                #{effect},
                #{status}
            );
    </insert>

    <select id="existBYParentid" resultType="String">
        select '1' from cc_websitedata
        <include refid="effect_sql" />
        and parentid = #{parentid};
    </select>

</mapper>